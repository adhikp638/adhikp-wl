header {
	  display: flex;
	  justify-content: space-between;
	  align-items: center;
	  padding: 20px;
	  background-color: #f8f8f8;
	 }



.tile-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.tile {
  flex-basis: 30%;
  margin-bottom: 1rem;
}


.tab1 {
  background-color: orange;
  position: relative;
}

.tab1::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: purple;
}






